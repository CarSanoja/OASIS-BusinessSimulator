{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/"
    }
  ],
  "env": {
    "VITE_API_URL": "https://api.oasis.somosquanta.com"
  },
  "build": {
    "env": {
      "VITE_API_URL": "https://api.oasis.somosquanta.com",
      "VITE_APP_NAME": "OASIS Business Simulator"
    }
  },
  "functions": {
    "frontend/src/**/*.{js,ts,tsx}": {
      "maxDuration": 30
    }
  }
}